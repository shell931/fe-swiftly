{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "swiftly": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "tsConfig": "tsconfig.app.json",
            "browser": "src/main.ts",
            "polyfills": ["src/polyfills.ts"],
            "outputPath": "dist/swiftly",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.css",
              "src/custom-theme.scss"
            ],
            "allowedCommonJsDependencies": [
              "sweetalert2",
              "jquery",
              "swiper",
              "bootstrap",
              "chart.js",
              "perfect-scrollbar",
              "file-saver",
              "exceljs"
            ]
          },
          "configurations": {
            "production": {
              "tsConfig":"tsconfig.app.json",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "buildTarget": "swiftly:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "swiftly:build:production"
            }
          }
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "main": "src/test.ts"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        },
        "e2e": {
          "builder": "@angular/build:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "swiftly:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "swiftly:serve:production"
            }
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "6304c6a3-c06d-4aee-bd2a-7cc82aedb261"
  }
}
